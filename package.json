{
  "name": "jrender-plus",
  "version": "1.0.0",
  "description": "",
  "author": "",
  "license": "ISC",
  "scripts": {
    "dev": "pnpm -r --filter='./packages/sample' run dev",
    "build": "pnpm -r --filter='./packages/*' run build",
    "clean": "pnpm -r --filter='./packages/*' run clean",
    "commit": "git add . && git status && git-cz",
    "lint": "lint-staged",
    "prepare": "husky install"
  },
  "dependencies": {
    "vue": "^3.4.15"
  },
  "devDependencies": {
    "@types/eslint": "^8.56.2",
    "@types/node": "^20.11.6",
    "@typescript-eslint/eslint-plugin": "^6.19.1",
    "@typescript-eslint/parser": "^6.19.1",
    "@vitejs/plugin-vue": "^5.0.3",
    "@vue/eslint-config-prettier": "^9.0.0",
    "@vue/eslint-config-typescript": "^12.0.0",
    "cz-conventional-changelog": "^3.3.0",
    "eslint": "^8.56.0",
    "eslint-plugin-prettier": "^5.1.3",
    "eslint-plugin-vue": "^9.20.1",
    "husky": "^8.0.3",
    "lint-staged": "^15.2.0",
    "prettier": "^3.2.4",
    "rimraf": "^5.0.5",
    "typescript": "^5.3.3",
    "vite": "^5.0.12"
  },
  "config": {
    "commitizen": {
      "path": "./node_modules/cz-conventional-changelog"
    }
  },
  "gitHooks": {
    "pre-commit": "lint-staged"
  },
  "lint-staged": {
    "packages/**/*.(vue|tsx|js|ts)": [
      "prettier --write",
      "eslint --fix"
    ]
  },
  "engines": {
    "node": ">=20.0.0"
  },
  "volta": {
    "node": "20.11.0"
  }
}
